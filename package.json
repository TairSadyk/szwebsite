{
  "name": "saya-zalel-website",
  "version": "1.0.0",
  "description": "Saya Zalel portfolio website",
  "default": "index.html",
  "scripts": {
    "devserver": "live-server",
    "watch:sass": "sass --watch sass/main.scss:css/style.css",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/syle.prefix.css",
    "compress:css": "sass --style=compressed css/style.prefix.css css/style.css",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "build:js": "parcel build index.html --dist-dir ./dist"
  },
  "author": "Tair S.",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.6.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.52.3"
  }
}
